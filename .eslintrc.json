{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "react/function-component-definition": [
      2,
      { "namedComponents": "function-declaration" }
    ],
    "quotes": "off",
    "no-use-before-define": "off",
    "react/react-in-jsx-scope": "off"
  }
}
